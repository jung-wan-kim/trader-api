# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# Logging
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# CORS (스테이징 환경)
CORS_ORIGIN=https://staging-trader-app.com,https://staging-admin.trader-app.com

# Rate Limiting (프로덕션 유사)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Feature Flags (스테이징)
ENABLE_WEBSOCKET=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true

# Health Check
HEALTH_CHECK_PATH=/health

# Security (프로덕션 유사)
BCRYPT_ROUNDS=12