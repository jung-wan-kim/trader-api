# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# JWT Configuration (Supabase manages this, but included for reference)
JWT_SECRET=your_supabase_jwt_secret

# Finnhub API
FINNHUB_API_KEY=your_finnhub_api_key
FINNHUB_SANDBOX_KEY=your_finnhub_sandbox_key_for_testing

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS_BASIC=100
RATE_LIMIT_MAX_REQUESTS_PREMIUM=500
RATE_LIMIT_MAX_REQUESTS_PROFESSIONAL=2000

# Subscription Limits
DAILY_RECOMMENDATIONS_BASIC=10
DAILY_RECOMMENDATIONS_PREMIUM=50
DAILY_RECOMMENDATIONS_PROFESSIONAL=200
MAX_PORTFOLIOS_BASIC=1
MAX_PORTFOLIOS_PREMIUM=5
MAX_PORTFOLIOS_PROFESSIONAL=20

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
EMAIL_FROM=noreply@trader-api.com
EMAIL_SMTP_HOST=smtp.sendgrid.net
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASS=your_sendgrid_api_key

# Payment Gateway (Stripe)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GA_TRACKING_ID=your_google_analytics_id

# External APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_for_backup
IEX_CLOUD_API_KEY=your_iex_cloud_key_for_backup

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false

# Security
CORS_ORIGIN=http://localhost:3001,https://app.trader-api.com
SESSION_SECRET=your_session_secret
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# Performance
CACHE_TTL_QUOTES=60
CACHE_TTL_CANDLES=300
CACHE_TTL_NEWS=3600
CACHE_TTL_INDICATORS=300

# Testing
TEST_USER_EMAIL=test@trader-api.com
TEST_USER_PASSWORD=TestPassword123!